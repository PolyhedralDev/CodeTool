<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>org.everbuild.terrascript</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Terra World Generator Support</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/PolyhedralDev/">Polyhedral Development</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
   This plugin adds support for the <code>.tesf</code> file format, designed for Terra, a data-driven World Generator for Minecraft.

    <h3>Key Features:</h3>
    <ul>
        <li><b>Syntax Highlighting and Formatting</b>: Offers full syntax highlighting for <code>.tesf</code> files, making it easier to read and write Terra scripts. It also includes a code formatter to maintain a consistent style across your projects.</li>
        <li><b>Code Completion and Analysis</b>: Provides intelligent code completion to help you write scripts faster and with fewer errors.</li>
        <li><b>Structure View</b>: Includes a structure view for <code>.tesf</code> files</li>
        <li><b>Refactoring and Navigation</b>: Supports refactoring of variables. You can also navigate between symbol declarations and their usages.</li>
        <li><b>Documentation and Templates</b>: Offers built-in support for documentation and parameter info, helping you understand the available functions and their usage. It also comes with live templates to speed up common coding tasks.</li>
    </ul>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="terrascript"
                  implementationClass="org.everbuild.terrascript.TerrascriptFileType"
                  fieldName="INSTANCE"
                  language="terrascript"
                  extensions="tesf"/>

        <lang.parserDefinition language="terrascript"
                               implementationClass="org.everbuild.terrascript.parsing.TerrascriptParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="terrascript"
                implementationClass="org.everbuild.terrascript.syntax.TerrascriptSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="org.everbuild.terrascript.syntax.TerrascriptColorSettingsPage"
                           id="terrascript"
                           order="last"/>

        <lang.formatter language="terrascript"
                        implementationClass="org.everbuild.terrascript.formatting.TerrascriptFormattingModelBuilder"/>

        <completion.contributor language="terrascript"
                                implementationClass="org.everbuild.terrascript.completion.TerrascriptCompletionContributor"/>

        <psi.referenceContributor language="terrascript"
                                  implementation="org.everbuild.terrascript.reference.TerrascriptReferenceContributor"/>

        <lang.psiStructureViewFactory language="terrascript"
                                      implementationClass="org.everbuild.terrascript.structure.TerrascriptStructureViewFactory"/>

        <lang.refactoringSupport
                language="terrascript"
                implementationClass="org.everbuild.terrascript.reference.TerrascriptRefactoringSupportProvider"/>

        <platform.backend.documentation.targetProvider
                implementation="org.everbuild.terrascript.docs.TerrascriptDocumentationTargetProvider"/>

        <codeInsight.parameterInfo
                language="terrascript"
                implementationClass="org.everbuild.terrascript.docs.TerrascriptParameterInfoHandler"/>

        <annotator
                language="terrascript"
                implementationClass="org.everbuild.terrascript.annotator.TerrascriptUndefinedVariableAnnotator"/>

        <annotator
                language="terrascript"
                implementationClass="org.everbuild.terrascript.annotator.TerrascriptUnusedVariableAnnotator"/>

        <liveTemplateContext implementation="org.everbuild.terrascript.template.TerrascriptLiveTemplateContext"
                             contextId="terrascript"/>

        <defaultLiveTemplates file="/liveTemplates/terrascript.xml"/>

        <lang.braceMatcher
                language="terrascript"
                implementationClass="org.everbuild.terrascript.editor.TerrascriptBraceMatcher"/>

        <typedHandler implementation="org.everbuild.terrascript.editor.TerrascriptTypedHandler"/>

        <languageInjector implementation="org.everbuild.terrascript.inject.TerrascriptStringInjector"/>

        <fileType name="terrascript_blockstate"
                  implementationClass="org.everbuild.terrascript.stringcomp.StringcompFileType"
                  fieldName="INSTANCE"
                  language="terrascript_blockstate"
                  extensions="minecraft_blockstate"/>

        <lang.parserDefinition language="terrascript_blockstate"
                               implementationClass="org.everbuild.terrascript.stringcomp.StringcompParserDefinition"/>

        <completion.contributor
                language="terrascript_blockstate"
                implementationClass="org.everbuild.terrascript.stringcomp.completion.StringcompCompletionContributor"/>

    </extensions>
    <actions>
        <action id="NEW_TERRASCRIPT_FILE"
                class="org.everbuild.terrascript.action.CreateNewTesfFile"
                text="Terrascript"
                description="Create new Terrascript file"
                icon="org.everbuild.terrascript.TerraIcons.TesfFile">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>
